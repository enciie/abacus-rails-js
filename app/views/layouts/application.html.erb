<!DOCTYPE html>
<html>
  <head>
    <title>AbacusRailsProject</title>
    <script src="https://code.jquery.com/jquery-2.2.3.min.js"></script>
    <%= stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>

    <header>
    <a href="<%= root_url %>" class = "button" >My Groups</a>

    <% if current_user %>
      <%= link_to("All Groups", groups_path, :class => "button")%>
      <%= link_to("Log Out", logout_path, :class => "button") %>
    <% else %>
      <%= link_to("Sign Up", signup_path, :class => "button")%>
      <%= link_to("Log In", login_path, :class => "button")%>
    <% end %>
  </header><br>

  <%# Flash messages %>
    <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
    <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>

    <%= yield %>

  </body>
</html>
