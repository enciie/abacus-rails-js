<%= form_for @group do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <br>
  <%= f.label :status %>
  <%= f.radio_button :status, 0, checked: true %>
  <%= f.label "Active" %>

  <%= f.radio_button :status, 1 %>
  <%= f.label "Inactive" %><br><br>

  <%= f.submit 'Submit', :class => 'button-3' %><%= link_to 'Cancel', groups_path, class: 'button-2' %><br>
<% end %>
